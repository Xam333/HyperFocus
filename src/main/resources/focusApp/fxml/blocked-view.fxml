<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="390.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="focusApp.controllers.BlockedController">
   <Pane>
      <children>
         <VBox spacing="20.0">
            <children>
            
                <!-- NAV BAR -->
                <HBox alignment="CENTER" prefHeight="60.0" prefWidth="390.0" spacing="80.0" styleClass="navBox">
            
                    <!-- Page Title -->
                    <Label styleClass="navLabel" text="Blocked Apps" textAlignment="CENTER" />
                </HBox>
               <HBox alignment="CENTER">
                  <children>
                  
                  
                      <!-- ADD WEBSITE, APPLICATION BUTTONS -->
                      <VBox prefWidth="370.0" spacing="20.0">
                          <HBox alignment="CENTER" prefHeight="40.0" prefWidth="280.0" spacing="10.0">
                              <Button onAction="#onWebsiteButtonClick" styleClass="defaultButton" text="Website +" />
                              <Button onAction="#onApplicationButtonClick" styleClass="defaultButton" text="Application +" />
                          </HBox>
                  
                          <!-- TABLE LAYOUT -->
                          <VBox prefHeight="300.0" prefWidth="280.0">
                              <Label styleClass="bodyLabel" text="Blocked Applications:" />
                              <TableView fx:id="tableView" styleClass="blockedTableView">
                                  <columns>
                                      <TableColumn fx:id="iconColumn" maxWidth="50" minWidth="50" prefWidth="50" resizable="false" styleClass="blockedTableColumn" text="Icon" />
                                      <TableColumn fx:id="nameColumn" maxWidth="119.0" minWidth="100.0" prefWidth="119.0" resizable="false" styleClass="blockedTableColumn" text="Name" />
                                      <TableColumn fx:id="locationColumn" maxWidth="197.0" minWidth="150.0" prefWidth="197.0" resizable="false" styleClass="blockedTableColumn" text="Web/File Link" />
                                  </columns>
                              </TableView>
                              <VBox.margin>
                                  <Insets bottom="20.0" />
                              </VBox.margin>
                          </VBox>
                          <!-- CANCEL, SAVE BUTTONS -->
                          <HBox alignment="BOTTOM_CENTER" prefHeight="40.0" prefWidth="280.0" spacing="10.0">
                              <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" styleClass="smallSecondaryButton" text="Cancel" />
                              <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" styleClass="smallPrimaryButton" text="Save" />
                          </HBox>
                      </VBox>
                  </children>
               </HBox>
            </children>
         </VBox>
          <!-- BLACK OUT PANE -->
          <StackPane fx:id="blackOutStackPane" prefHeight="600.0" prefWidth="390.0" styleClass="blackOutPane" visible="false">
          </StackPane>
      
           <!-- ADD APPLICATION PANE -->
           <StackPane fx:id="addApplicationStackPane" layoutX="55.0" layoutY="200.0" styleClass="confirmPane" visible="false">
               <VBox>
                   <HBox alignment="TOP_RIGHT">
                       <Button mnemonicParsing="false" onAction="#onXLabelClick" styleClass="tinyXButton" text="X" />
                   </HBox>
                   <VBox alignment="CENTER">
                       <Label styleClass="bodyLabel" text="Add an application to block list" textAlignment="CENTER" wrapText="true" />
                       <HBox alignment="CENTER" styleClass="ButtonControlIcon">
                           <padding>
                               <Insets top="7.0" />
                           </padding>
                           <TextField fx:id="addApplicationTextField" editable="false" prefHeight="92.0" prefWidth="185.0" promptText="Search file explorer" style="-fx-border-radius: 8px 0px 0px 8px;" styleClass="textBox" />
                           <Button mnemonicParsing="false" onAction="#onFileClick" text="AddFile" textAlignment="RIGHT" />
                       </HBox>
                       <padding>
                           <Insets bottom="10.0" />
                       </padding>
                   </VBox>
                   <HBox alignment="TOP_RIGHT">
                       <Button fx:id="addAppButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#onAddButtonClick" styleClass="tinyPrimaryButton" text="Block" textAlignment="CENTER" />
                   </HBox>
               </VBox>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
      
           </StackPane>

          <!-- ADD WEBSITE PANE -->
           <StackPane fx:id="addWebsiteStackPane" layoutX="55.0" layoutY="200.0" styleClass="confirmPane" visible="false">
               <VBox>
                   <HBox alignment="TOP_RIGHT">
                       <Button mnemonicParsing="false" onAction="#onXLabelClick" styleClass="tinyXButton" text="X" />
                   </HBox>
                   <VBox alignment="CENTER">
                       <Label styleClass="bodyLabel" text="Add a website to block list" textAlignment="CENTER" wrapText="true" />
      
                       <HBox alignment="CENTER">
                           <padding>
                               <Insets top="7.0" />
                           </padding>
                           <TextField fx:id="addWebsiteTextField" minWidth="230.0" onKeyTyped="#websiteEntered" promptText="https://www.example.com" styleClass="textBox" />
                       </HBox>
                       <padding>
                           <Insets bottom="10.0" />
                       </padding>
                   </VBox>
                   <HBox alignment="TOP_RIGHT">
                       <Button fx:id="addWebButton" disable="true" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="56.0" prefWidth="112.0" styleClass="tinyPrimaryButton" text="Block" textAlignment="CENTER" />
                   </HBox>
               </VBox>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
           </StackPane>
      </children>
   </Pane>
</AnchorPane>
