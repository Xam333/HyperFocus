<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="focusApp.controllers.BlockedController">


    <children>
        <VBox fx:id="vBoxContainer" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox fx:id="hBoxHeader" alignment="CENTER_LEFT" minHeight="50.0" spacing="10.0" style="-fx-background-color: #59ADFF;">
                    <children>
                        <Button fx:id="backButton" onAction="#onBackButtonClick" text="&lt;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 18px;" text="Blocked List" textFill="WHITE" wrapText="true" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button>
                            <graphic>
                                <ImageView fx:id="youtubeIcon" />
                                <ImageView fx:id="redditIcon" />
                                <ImageView fx:id="userIcon" />

                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <HBox fx:id="hBoxTabs" alignment="CENTER" spacing="10.0">
                    <children>
                        <Button style="-fx-background-color: white; -fx-border-color: black;" stylesheets="@../stylesheet.css" text="Website +" />
                        <Button text="Application +" />
                    </children>
                </HBox>
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="iconColumn" maxWidth="50" minWidth="50" prefWidth="50" style="-fx-alignment: center;" text="" />
                        <TableColumn fx:id="nameColumn" maxWidth="100" minWidth="100" prefWidth="100" style="-fx-alignment: center;" text="Name" />
                        <TableColumn fx:id="locationColumn" maxWidth="300" minWidth="200" prefWidth="250" style="-fx-alignment: center;" text="Web/File Link" />
                    </columns>
                </TableView>
                <Button fx:id="saveButton" maxWidth="Infinity" text="Save" VBox.vgrow="NEVER" />
            </children>
        </VBox>
    </children>

</AnchorPane>
