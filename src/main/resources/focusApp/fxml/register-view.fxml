<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Hyperlink?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0"
            prefWidth="390.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="focusApp.controllers.LoginController">
    <VBox alignment="TOP_CENTER"
          layoutX="53.0"
          prefHeight="600.0"
          prefWidth="284.0">

        <!-- LOGO -->
        <ImageView id="logoLarge"
                   fitHeight="200.0"
                   fitWidth="200.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Image url="@../images/logoLarge.png"/>
        </ImageView>



        <!-- REGISTER HEADINGS -->
        <Label styleClass="headLabel"
               text="Create your account:"
               textAlignment="CENTER"
               wrapText="true"/>

        <Label styleClass="subheadLabel"
               text="Enter your details below to create an account and get started."
               textAlignment="CENTER"
               wrapText="true" >
            <padding>
                <Insets bottom="30.0"/>
            </padding>
        </Label>


        <!-- REGISTER FIELDS -->
        <VBox spacing="10.0" alignment="CENTER">
            <TextField fx:id="regUserNameTextField"
                       styleClass="textBox"
                       promptText="Username"
            />
            <PasswordField fx:id="regPasswordTextField"
                           styleClass="textBox"
                           promptText="Password"
            />
            <PasswordField fx:id="confirmPasswordTextField"
                           styleClass="textBox"
                           promptText="Confirm Password"
            />

            <Label fx:id="denyRegisterLabel"
                   styleClass="warningLabel"
                   textAlignment="RIGHT"
                   wrapText="true"/>

            <!-- REGISTER BUTTONS -->
            <HBox spacing="10.0" alignment="BOTTOM_CENTER">
                <Button fx:id="backButton"
                        mnemonicParsing="false"
                        onAction="#onBackButtonClick"
                        styleClass="smallSecondaryButton"
                        text="BACK"
                        textAlignment="CENTER"/>

                <Button fx:id="confirmButton"
                        mnemonicParsing="false"
                        onAction="#onConfirmButtonClick"
                        styleClass="smallPrimaryButton"
                        text="CONFIRM"
                        textAlignment="CENTER"/>
            </HBox>

            <!-- LINK TO LOGIN -->
            <Hyperlink fx:id="loginLink"
                       onAction="#onLoginLinkClick"
                       styleClass="linkLabel"
                       text="Already have an account? Click here to login."
                       textAlignment="CENTER"
                       wrapText="true">
                <padding>
                    <Insets top="30.0"/>
                </padding>
            </Hyperlink>

         </VBox>
    </VBox>
</AnchorPane>
