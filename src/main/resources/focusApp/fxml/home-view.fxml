<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="390.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="focusApp.controllers.HomeController">
   <VBox alignment="TOP_CENTER" layoutX="53.0" prefHeight="600.0" prefWidth="284.0">

      <!-- LOGO -->
      <ImageView id="logoLarge" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <Image url="@../images/logoLarge.png" />
      </ImageView>

      <!-- HEADING -->
      <Label styleClass="headLabel" text="Welcome to the Hyper Focus App, your personal productivity partner!" textAlignment="CENTER" wrapText="true" />
      <Label styleClass="subheadLabel" text="Our tool helps you block distracting applications, allowing you to concentrate fully on your tasks and achieve your goals efficiently." textAlignment="CENTER" wrapText="true" />

      <!-- REGISTER -->
      <Label styleClass="bodyLabel" text="Don't have an account? Sign up here:" textAlignment="CENTER">
         <padding>
            <Insets top="30.0" />
         </padding>
      </Label>
      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterButtonClick" styleClass="largePrimaryButton" text="Get Started" textAlignment="CENTER" />

      <!-- LOG IN -->
      <Label styleClass="bodyLabel" text="Already signed up? Log in here:">
         <padding>
            <Insets top="30.0" />
         </padding>
      </Label>
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" styleClass="largeSecondaryButton" text="Login" />
   </VBox>
</AnchorPane>
