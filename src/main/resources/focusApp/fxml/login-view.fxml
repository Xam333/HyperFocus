<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="focusApp.controllers.LoginController" style="-fx-background-color: #d8f2eb;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- LOGIN -->
    <ImageView fx:id="focusAppLogo"/>
    <Region minHeight="25"/>

    <VBox>
        <Label text="We are glad to have you back!" style="-fx-text-alignment: center; -fx-font-size: 18px;" wrapText="true"/>
        <Region minHeight="5"/>
        <Label text="Please login:" style="-fx-text-alignment: center; -fx-font-size: 15px;" wrapText="true" />
    </VBox>

    <Region minHeight="25"/>

    <VBox spacing="10.0" alignment="CENTER">
        <TextField fx:id="userNameTextField"
                   style="-fx-font-size: 15px; -fx-background-color: #EFF8FB; -fx-effect: innershadow(one-pass-box, #43AED9, 10, 0.5, 0, 0); -fx-border-color: #000000;"
                   promptText="Username"
        />
        <Region minHeight="3"/>
        <PasswordField fx:id="passwordTextField"
                       style="-fx-font-size: 15px; -fx-background-color: #EFF8FB; -fx-effect: innershadow(one-pass-box, #43AED9, 10, 0.5, 0, 0); -fx-border-color: #000000;"
                       promptText="Password"
        />
        <Region minHeight="50"/>
        <HBox spacing="10.0" alignment="BOTTOM_CENTER">
            <Button fx:id="backButton"
                    text="Back"
                    style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9;"
                    minWidth="100"
                    onAction="#onBackButtonClick"

            />
            <Button fx:id="loginButton"
                    text="Login"
                    style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9;"
                    minWidth="100"
                    onAction="#onLoginButtonClick"
            />
        </HBox>
        <Label fx:id="denyLoginLabel" style="-fx-text-alignment: center; -fx-font-size: 18px;" wrapText="true"/>
    </VBox>
</VBox>
