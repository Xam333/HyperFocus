<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="644.0" prefWidth="390.0" style="-fx-background-color: #d8f2eb;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="focusApp.controllers.TimerController">

    <VBox fx:id="vBoxContainer" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <HBox fx:id="hBoxHeader" alignment="CENTER_LEFT" style="-fx-background-color: red;">

            <Button fx:id="BackBtn"
                    onAction="#onBackButtonClick"
                    text="&lt;" />

            <Region HBox.hgrow="ALWAYS" />

            <Label style="-fx-font-size: 18px;"
                   text="Timer"
                   textAlignment="CENTER"
                   wrapText="true" />

            <Region HBox.hgrow="ALWAYS" />

            <Button text="..." />

         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>

        </HBox>

        <HBox fx:id="TimerFace" alignment="CENTER">

            <Label fx:id="StopWatch"
                   text="00:00:00">
            <font>
               <Font size="96.0" />
            </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER" spacing="10">

            <Button fx:id="PauseBtn"
                    maxWidth="Infinity"
                    onAction="#onPauseButtonClick"
                    prefWidth="100"
                    style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9;"
                    text="Pause" HBox.hgrow="ALWAYS" disable="true"/>

            <Button fx:id="ResumeBtn"
                    managed="false"
                    maxWidth="Infinity"
                    onAction="#onResumeButtonClick"
                    prefWidth="0"
                    style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9;"
                    text="Resume" visible="false" HBox.hgrow="ALWAYS" />
        </HBox>
   
         <Button fx:id="StopBtn" maxWidth="Infinity" onAction="#onStopButtonClick" style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9; -fx-background-radius: 20; -fx-border-radius: 20;" text="Stop">
         <VBox.margin>
            <Insets left="5.0" right="5.0" top="10.0" />
         </VBox.margin>
      </Button>

    </VBox>
</AnchorPane>
