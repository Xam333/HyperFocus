<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="644.0" prefWidth="390.0" style="-fx-background-color: #d8f2eb;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="focusApp.controllers.TimerController">

    <VBox fx:id="vBoxContainer" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <HBox fx:id="hBoxHeader" alignment="CENTER_LEFT" style="-fx-background-color: red;">

            <Button fx:id="BackBtn" onAction="#onBackButtonClick" text="&lt;" />

            <Region HBox.hgrow="ALWAYS" />

            <Label style="-fx-font-size: 18px;" text="Timer" textAlignment="CENTER" wrapText="true" />

            <Region HBox.hgrow="ALWAYS" />

            <Button text="..." />

         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>

        </HBox>

        <HBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="TimerStatus" text="..." textAlignment="CENTER" wrapText="true">
            <font>
               <Font size="24.0" />
            </font></Label>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
      <StackPane fx:id="StackPane" prefHeight="150.0" prefWidth="200.0">
         <children>
            <Circle fill="#333333" radius="175.0" stroke="TRANSPARENT" strokeType="INSIDE" />

               <Label fx:id="StopWatch" alignment="CENTER" text="00:00:00" textFill="WHITE">
               <font>
                  <Font size="71.0" />
               </font>
               </Label>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Arc fx:id="arc" centerX="175.0" centerY="100.0" fill="TRANSPARENT" layoutX="10.0" layoutY="75.0" length="360.0" radiusX="160.0" radiusY="160.0" startAngle="90.0" stroke="#00ff22" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="10.0" />
               </children>
            </Pane>
         </children>
      </StackPane>

        <HBox alignment="CENTER" spacing="10">

            <Button fx:id="PauseBtn" disable="true" maxWidth="Infinity" onAction="#onPauseButtonClick" prefWidth="100" style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9;" text="Pause" HBox.hgrow="ALWAYS" />

            <Button fx:id="ResumeBtn" managed="false" maxWidth="Infinity" onAction="#onResumeButtonClick" prefWidth="0" style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9;" text="Resume" visible="false" HBox.hgrow="ALWAYS" />
        </HBox>

         <Button fx:id="StopBtn" maxWidth="Infinity" onAction="#onStopButtonClick" style="-fx-font-size: 24px; -fx-border-color: black; -fx-background-color: #43aed9; -fx-background-radius: 20; -fx-border-radius: 20;" text="Stop">
         <VBox.margin>
            <Insets left="5.0" right="5.0" top="10.0" />
         </VBox.margin>
      </Button>

    </VBox>
</AnchorPane>
